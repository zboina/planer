{% extends '@Planer/admin/_layout.html.twig' %}

{% block panel_title %}Urlopy{% endblock %}
{% block panel_heading %}Podgląd urlopów{% endblock %}

{% block panel_content %}
{% if departamenty is empty %}
    <div class="empty">
        <p class="empty-title">Brak departamentów</p>
        <p class="empty-subtitle text-secondary">Dodaj departamenty, aby zobaczyć podgląd urlopów.</p>
    </div>
{% else %}
    <div class="d-flex align-items-center gap-3 mb-4">
        <div>
            <select class="form-select" id="dept-select" onchange="navigateUrlopy()">
                {% for dept in departamenty %}
                    <option value="{{ dept.id }}" {{ wybranyDept and dept.id == wybranyDept.id ? 'selected' : '' }}>
                        {{ dept.nazwa }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="d-flex align-items-center gap-2">
            <a href="{{ path('planer_admin_urlopy', {departamentId: wybranyDept.id, rok: rok - 1}) }}" class="btn btn-icon btn-ghost-secondary" title="{{ rok - 1 }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 6l-6 6l6 6"/></svg>
            </a>
            <span class="fw-bold fs-3">{{ rok }}</span>
            <a href="{{ path('planer_admin_urlopy', {departamentId: wybranyDept.id, rok: rok + 1}) }}" class="btn btn-icon btn-ghost-secondary" title="{{ rok + 1 }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 6l6 6l-6 6"/></svg>
            </a>
        </div>
    </div>

    {% if users is empty %}
        <div class="empty">
            <p class="empty-title">Brak pracowników</p>
            <p class="empty-subtitle text-secondary">W wybranym departamencie nie ma przypisanych pracowników.</p>
        </div>
    {% else %}
        {# ── Tabela zbiorcza: miesiące + limit ── #}
        <div class="table-responsive mb-4">
            <table class="table table-vcenter table-bordered table-hover mb-0">
                <thead>
                    <tr>
                        <th>Pracownik</th>
                        {% for m in miesiace %}
                            <th class="text-center" style="min-width: 50px;">{{ m }}</th>
                        {% endfor %}
                        <th class="text-center">Wyk.</th>
                        <th class="text-center">Limit</th>
                        <th class="text-center">Poz.</th>
                    </tr>
                </thead>
                <tbody>
                    {% set sumyMiesiac = {} %}
                    {% for i in 1..12 %}
                        {% set sumyMiesiac = sumyMiesiac|merge({(i): 0}) %}
                    {% endfor %}
                    {% set sumaWykorzystane = 0 %}

                    {% for userId, user in users %}
                        {% set userUrlopy = urlopyPerUser[userId]|default({}) %}
                        {% set userRazem = 0 %}
                        {% set limit = user.iloscDniUrlopuWRoku %}
                        <tr>
                            <td class="text-nowrap">{{ user.fullName }}</td>
                            {% for m in 1..12 %}
                                {% set dni = userUrlopy[m]|default([]) %}
                                {% set count = dni|length %}
                                {% set userRazem = userRazem + count %}
                                {% set sumyMiesiac = sumyMiesiac|merge({(m): sumyMiesiac[m] + count}) %}
                                <td class="text-center {% if count > 0 %}{% if count <= 5 %}bg-cyan-lt{% elseif count <= 10 %}bg-cyan{% else %}bg-cyan text-white{% endif %}{% endif %}"
                                    {% if count > 0 %}title="{{ dni|join(', ') }}"{% endif %}
                                    style="cursor: {% if count > 0 %}help{% else %}default{% endif %};">
                                    {% if count > 0 %}{{ count }}{% else %}-{% endif %}
                                </td>
                            {% endfor %}
                            {% set sumaWykorzystane = sumaWykorzystane + userRazem %}
                            {% set pozostalo = limit - userRazem %}
                            <td class="text-center fw-bold">{{ userRazem > 0 ? userRazem : '-' }}</td>
                            <td class="text-center text-secondary">{{ limit }}</td>
                            <td class="text-center fw-bold {% if pozostalo < 0 %}text-danger{% elseif pozostalo <= 5 %}text-warning{% else %}text-success{% endif %}">
                                {{ pozostalo }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr class="fw-bold">
                        <td>Suma</td>
                        {% for m in 1..12 %}
                            <td class="text-center">{{ sumyMiesiac[m] > 0 ? sumyMiesiac[m] : '-' }}</td>
                        {% endfor %}
                        <td class="text-center">{{ sumaWykorzystane > 0 ? sumaWykorzystane : '-' }}</td>
                        <td class="text-center" colspan="2"></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        {# ── Zestawienie z datami urlopów ── #}
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h3 class="mb-0">Zestawienie dat urlopów</h3>
            <a href="{{ path('planer_admin_urlopy_raport_pdf', {departamentId: wybranyDept.id, rok: rok}) }}" class="btn btn-primary" target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24"
                     stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M17 17h2a2 2 0 0 0 2 -2v-4a2 2 0 0 0 -2 -2h-14a2 2 0 0 0 -2 2v4a2 2 0 0 0 2 2h2"/>
                    <path d="M17 9v-4a2 2 0 0 0 -2 -2h-6a2 2 0 0 0 -2 2v4"/>
                    <path d="M7 13m0 2a2 2 0 0 1 2 -2h6a2 2 0 0 1 2 2v4a2 2 0 0 1 -2 2h-6a2 2 0 0 1 -2 -2z"/>
                </svg>
                Generuj raport PDF
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-vcenter table-bordered table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 200px;">Pracownik</th>
                        <th>Okresy urlopowe</th>
                        <th class="text-center" style="width: 80px;">Dni</th>
                        <th class="text-center" style="width: 80px;">Limit</th>
                        <th class="text-center" style="width: 80px;">Poz.</th>
                    </tr>
                </thead>
                <tbody>
                    {% for userId, user in users %}
                        {% set zakresy = zakresyPerUser[userId]|default([]) %}
                        {% set userUrlopy = urlopyPerUser[userId]|default({}) %}
                        {% set userRazem = 0 %}
                        {% for m in 1..12 %}
                            {% set userRazem = userRazem + (userUrlopy[m]|default([]))|length %}
                        {% endfor %}
                        {% set limit = user.iloscDniUrlopuWRoku %}
                        {% set pozostalo = limit - userRazem %}
                        <tr>
                            <td class="text-nowrap">{{ user.fullName }}</td>
                            <td>
                                {% if zakresy is not empty %}
                                    {% for zakres in zakresy %}
                                        <span class="badge bg-cyan-lt me-1 mb-1">{{ zakres }}</span>
                                    {% endfor %}
                                {% else %}
                                    <span class="text-secondary">-</span>
                                {% endif %}
                            </td>
                            <td class="text-center fw-bold">{{ userRazem > 0 ? userRazem : '-' }}</td>
                            <td class="text-center text-secondary">{{ limit }}</td>
                            <td class="text-center fw-bold {% if pozostalo < 0 %}text-danger{% elseif pozostalo <= 5 %}text-warning{% else %}text-success{% endif %}">
                                {{ pozostalo }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <script>
        function navigateUrlopy() {
            const deptId = document.getElementById('dept-select').value;
            window.location.href = '{{ path('planer_admin_urlopy') }}/' + deptId + '/{{ rok }}';
        }
    </script>
{% endif %}
{% endblock %}
