{% extends '@Planer/admin/_layout.html.twig' %}

{% block panel_title %}Szablony podań — Panel planera{% endblock %}
{% block panel_heading %}Szablony podań / wniosków{% endblock %}

{% block panel_actions %}
    <a href="{{ path('planer_admin_szablon_new') }}" class="btn btn-success">+ Nowy szablon</a>
{% endblock %}

{% block panel_content %}
<div class="table-responsive">
    <table class="table table-vcenter card-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Pola formularza</th>
                <th>Aktywny</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            {% for s in szablony %}
            <tr>
                <td>{{ s.id }}</td>
                <td>{{ s.nazwa }}</td>
                <td>
                    {% for pole in s.polaFormularza %}
                        <span class="badge bg-blue-lt me-1">{{ pole }}</span>
                    {% endfor %}
                </td>
                <td>
                    {% if s.aktywny %}
                        <span class="badge bg-success">Tak</span>
                    {% else %}
                        <span class="badge bg-secondary">Nie</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('planer_admin_szablon_edit', {id: s.id}) }}" class="btn btn-sm btn-warning">Edytuj</a>
                    <form method="post" action="{{ path('planer_admin_szablon_delete', {id: s.id}) }}" class="d-inline" onsubmit="return confirm('Czy na pewno chcesz usunąć ten szablon?')">
                        <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted py-4">Brak szablonów.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
